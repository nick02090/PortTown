
@{
    ViewBag.Title = "BuyList";
}

<h4>Buy</h4>

<div>
    <hr />
    @for (int i = 0; i < Model.Items.Count; i += 3)
    {
        <div class="row">
            @for (int j = 0; j < 3 && i + j < Model.Items.Count; ++j)
            {
                var item = Model.Items[i + j];

                <div class="col-md-4 col-sm-4">
                    <div class="card">
                        <div class="card-header text-center">
                            <h4>@Html.Encode(item.Type.ToString())</h4>
                        </div>
                        <div class="card-body text-center">
                            <dl class="dl-horizontal">
                                <dt>Owned:</dt>
                                <dd>@Html.Encode(item.Amount)</dd>
                                <dt>Buy for:</dt>
                                @foreach (var res in item.ToSell)
                                {
                                    <dd>
                                        @Html.Encode(res.Type.ToString()): @Html.Encode(res.Value)
                                    </dd>
                                }
                            </dl>
                            <button class="btn btn-primary">Buy</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>