                    <Button Click="OpenWindowClick" Name="addResourceButton" Content="Add Resource" HorizontalAlignment="Right" Margin="0,0,10,141.4" VerticalAlignment="Bottom" Width="107" RenderTransformOrigin="-0.237,0.467"/>
                    <Button Click="OpenWindowClick" Name="editResourceButton" Content="Edit Resource" HorizontalAlignment="Right" Margin="0,0,10,91.4" VerticalAlignment="Bottom" Width="107" RenderTransformOrigin="-0.237,0.467"/>
                    <Button Click="RemoveClick" Name="removeResourceButton" Content="Remove Resource" HorizontalAlignment="Right" Margin="0,0,10,41.4" VerticalAlignment="Bottom" Width="107" RenderTransformOrigin="-0.237,0.467"/>
                </Grid>
            </TabItem>
            <TabItem Header="Market">
                <Grid Margin="23,27,17,59.6">
                    <DataGrid SelectionChanged="DataGridSelectionChanged" AutoGenerateColumns="True" CanUserAddRows="False" Name="MarketTable" Margin="18,-5,159,4.4"/>

                    <Button Click="OpenWindowClick" Name="addMarketButton" Content="Add Market Item" HorizontalAlignment="Right" Margin="0,0,10,141.4" VerticalAlignment="Bottom" Width="107" RenderTransformOrigin="-0.237,0.467"/>
