                    <Button Click="OpenWindowClick" Name="addBuildingButton" Content="Add Building" HorizontalAlignment="Right" Margin="0,0,10.4,140.8" VerticalAlignment="Bottom" Width="107" RenderTransformOrigin="-0.237,0.467"/>
